---
const {label, tech1, tech2, tech3, customStyle, role, img} = Astro.props;
---
<div
  class=`realtive z-10 bg-white border-2 rounded-4xl customShadow-sm w-[95vw] md:w-[75vw] lg:w-[30vw] px-4 lg:px-8 py-4 lg:py-8 hover:scale-[101%] transition duration-300 ease-in-out ${customStyle}`
>
  <h2 class="font-extrabold text-xl lg:text-2xl">{role}</h2>
  <h3 class="font-light text-xl lg:text-2xl mb-2 lg:mb-4">{label}</h2>
  <slot />
  <div class="flex flex-row items-center justify-around mt-4">
    <ul class="text-sm lg:text-[1vw] font-semibold">
      <li>{tech1}</li>
      <li>{tech2}</li>
      <li>{tech3}</li>
    </ul>

    <img src={img} alt="TechStack" class="w-50 lg:w-60 border-2 rounded-2xl " loading="lazy" decoding="async" />
  </div>
</div>
